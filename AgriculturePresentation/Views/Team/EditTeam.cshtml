@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "EditTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Güncelleme Formu</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.TeamID)
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <span asp-validation-for="PersonelName" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Ad Soyad" asp-for="PersonelName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Görev" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Görsel Yolu" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Facebook</label>
                    <input type="text" class="form-control" placeholder="Facebook Linkini Giriniz" asp-for="FacebookUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">İnstagram</label>
                    <input type="text" class="form-control" placeholder="İnstngram Linkini Giriniz" asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Twitter</label>
                    <input type="text" class="form-control" placeholder="Twitter Linkini Giriniz" asp-for="TwitterUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Web Sitesi</label>
                    <input type="text" class="form-control" placeholder="Varsa Web Site Linkini Giriniz" asp-for="WebSiteUrl">
                </div>
                <button type="submit" class="btn btn-outline-info me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>